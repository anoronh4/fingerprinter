{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/anoronh4/fingerprinter/master/assets/schema_input.json",
    "title": "anoronh4/fingerprinter pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "pool": {
                "type": ["string","integer"],
                "pattern": "^\\S+$",
                "meta": ["pool"]
            },
            "group": {
                "type": ["string","integer"],
                "pattern": "^\\S+$",
                "meta": ["group"],
                "default": ""

            },
            "bam_or_fp": {
                "type": "string",
                "format": "file-path",
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.(bam|fp.tsv)$"
            },
            "fp_genome": {
                "type": "string",
                "enum": ["GRCh37", "GRCh38", "GRCh37chr", ""],
                "errorMessage": "genome must be GRCh37, GRCh38, GRCh37chr, or blank (no spaces)",
                "meta": ["genome"],
                "default": ""
            }
        },
        "required": ["sample", "bam_or_fp", "pool"]
    }
}
